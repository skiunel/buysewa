# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/buysewa
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/buysewa?retryWrites=true&w=majority

# JWT Secret (change this to a random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Blockchain Configuration
# Contract address (will be set after deploying smart contract)
REVIEW_AUTH_CONTRACT_ADDRESS=

# Blockchain RPC URL (for local Hardhat node)
BLOCKCHAIN_RPC_URL=http://localhost:8545

# Private key for blockchain transactions (for backend to register SDCs)
# Generate a new account in Hardhat and use its private key
# DO NOT use your main wallet private key!
BLOCKCHAIN_PRIVATE_KEY=

# Default user address for blockchain operations (optional)
DEFAULT_USER_ADDRESS=
